<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Home.HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="571dp"
        android:orientation="vertical">


        <View
            android:layout_width="434dp"
            android:layout_height="300dp"
            android:layout_marginTop="-20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_vektor" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="160dp"
            android:layout_height="172dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-110dp"
            android:src="@drawable/reza"
            app:civ_border_color="#d7fbe8"
            app:civ_border_width="6dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#d7fbe8"
            app:civ_shadow_radius="10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-125dp"
            android:fontFamily="@font/bevan"
            android:textColor="#FFFFFF"
            android:text="Reza Pratama"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#FFFFFF"
            android:text="Android Developer"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="162dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                app:srcCompat="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:fontFamily="sans-serif-light"
                android:text="Tanjung Pandan, Belitung"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"

                android:fontFamily="sans-serif-medium"
                android:text="Deskripsi Diri"

                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="monospace"
                android:text="Ingin menjadi diri sendiri melangkah lebih maju dan menjadi yang terdepan sebagai Android Developer, serta terus melakukan hal yang baru dalam hidup."
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Interest"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/strategy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/almendra_bold"
                    android:text="Bermain Game, Bermimpi." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cake" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/almendra_bold"
                    android:text="Ayam Goreng" />


            </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:orientation="horizontal">

              <ImageView
                  android:id="@+id/imageView4"
                  android:layout_width="210dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  app:srcCompat="@drawable/alcoholic" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"

                  android:fontFamily="@font/almendra_bold"
                  android:text="Es tea" />

          </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dove" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/almendra_bold"
                    android:text="Ingin menjadi lebih baik dari apa yang ada sekarang " />

            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/imageView6"
                   android:layout_width="210dp"
                   android:layout_height="34dp"
                   android:layout_marginTop="5dp"
                   android:layout_weight="1"
                   app:srcCompat="@drawable/cs" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="5dp"
                   android:layout_weight="1"
                   android:fontFamily="@font/almendra_bold"
                   android:text="Membahagiakan orang yang disayang." />

           </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom|top"
            android:layout_weight="1"
            android:background="#d7fbe8"
            app:menu="@menu/menu_bottom" />

    </LinearLayout>


</LinearLayout>